@{
    ViewData["Title"] = "Detail";
}
@model DetailPersonVM

<div class="row mt-3">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Kişi Bilgisi</h3>
            </div>
            <div class="card-body">
                <div>
                    <label>Ad: </label>
                    <b>@Model.Name</b>
                </div>
                <div>
                    <label>Soyad: </label>
                    <b>@Model.Surname</b>
                </div>
                <div>
                    <label>Doğum Tarihi: </label>
                    <b>@Model.Birthdate.ToShortDateString()</b>
                </div>
                <div>
                    <label>Cinsiyet: </label>
                    <b>@Model.Gender</b>
                </div>
                <div>
                    <label>Durum: </label>
                    <b>@Model.Status</b>
                </div>
            </div>
            <div class="card-footer">
                <a class="btn btn-outline-primary float-end" asp-action="UpdatePerson" asp-route-id="@Model.Id">Kişi Bilgilerini Düzenle</a>
                <a class="btn btn-outline-info float-start" asp-action="Index">Geri Dön</a>
            </div>
        </div>
    </div>
</div>